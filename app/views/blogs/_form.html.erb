<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div>
    <%= f.text_field :title, placeholder: 'Title', class: 'new-blog-box blog-title-topic-box' %>
  </div>
  <div>
    <%= f.label :topic_id %>
    <%= f.collection_select(:topic_id, Topic.all, :id, :title,
                              {
                              include_blank: true
                              },
                              class: 'new-blog-box blog-title-topic-box'
                              )  %>
  </div>

  <div>
    <%= f.radio_button :status, 'draft' %>
    <%= f.label :status, 'Draft' %>
  </div>
  <div>
    <%= f.radio_button :status, 'published' %>
    <%= f.label :status, 'Published' %>
  </div>

  <div>
    <%= f.text_area :body, rows: 15, placeholder: 'Blog Content', class: 'new-blog-box' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'button' %>
  </div>
<% end %>
