<div class='blog-posts'>

  <nav>
    <%= link_to 'Home', root_path, :class => 'links' %>
    <i class="fa fa-chevron-right arrow" aria-hidden="true"></i>
    <%= link_to 'Blogs', blogs_path, :class => 'links' %>
    <i class="fa fa-chevron-right arrow" aria-hidden="true"></i>
    <%= link_to "#{@blog.topic.title}", topic_path(@blog.topic), :class => 'links' %>
     <i class="fa fa-chevron-right arrow" aria-hidden="true"></i>
    <span class='blog-title-bcrumb'><%= @blog.title %></span>

    <div>
      <%= link_to fa_icon('pencil-square-o'),edit_blog_path(@blog) if logged_in?(:site_admin) %> 
      <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post?'} if logged_in?(:site_admin) %> 
    </div>
  </nav>
  <div class='blog-body'>
    <h2 class='blog-title'><%= @blog.title %></h2>

    <h4 class='topic-title'><%= @blog.topic.title %></h4>

    <h4 class='blog-text'>
      <%= markdown @blog.body %>
    </h4>

    <%= render 'comments/comment_form' %>

    <div data-blog-id='<%= @blog.id %>'>
      <%= render @blog.comments %>
    </div>
  </div>

</div>




