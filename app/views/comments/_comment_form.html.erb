<% unless current_user.is_a? GuestUser %>
  <%= form_for @comment, url: '#' do |f| %>
    <div class='comment'>
      <div>
        <%= f.label :content, 'Comment', class: 'comment-label' %>
      </div>
      <div>   
        <%= f.text_area :content, class: 'comment-box' %>
      </div>
    </div>

    <%= f.submit 'Post Comment', class: 'button' %>
  <% end %>
<% else %>
  <h6 class='comment-guestuser'><%= link_to 'Login', new_user_session_path, class: 'comment-login-link' %> to comment</h6>
<% end %>