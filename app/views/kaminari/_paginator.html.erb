<style>
.pagination{padding:.3em;margin:.3em; font: 13.34px helvetica,arial,freesans,clean,sans-serif;display:flex;justify-content: space-around;}
.pagination a{padding:.1em .3em;margin:.2em;border:1px solid #2385BF;text-decoration:none;color:#175980;}
.pagination a:hover,.pagination a:active{border:1px solid #175980;color:#2385BF;}
.pagination span.current{padding:.1em .3em;margin:.2em;border:1px solid #369;font-weight:bold;background-color:#369;color:#FFF;}
.pagination span.disabled{padding:.1em .3em;margin:.2em;border:1px solid #0B2C40;color:#0B2C40;}
</style>
<%= paginator.render do -%>
<div class="pagination"><%= prev_page_tag -%><%= next_page_tag -%></div>
<% end -%>
