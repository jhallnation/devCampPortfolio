<%= form_for(@portfolio_item) do |f| %>
 <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
<div>
  <div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :subtitle %>
      <%= f.text_area :subtitle %>
    </div>
  
      <div class='button-portfolio'>
        upload a main image file <%= f.file_field :main_image, Style: 'display:none;' %>
      </div> 

      <div class='button-portfolio'>
        upload a thumb image file <%= f.file_field :thumb_image, Style: 'display:none;' %>
      </div> 
  </div>

  <div>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 13, class: 'new-portfolio-box' %>
    </div>
  </div>
</div>

  <hr>
<div>
  <h2>Techonologies Used:</h2>
  <div>
    <%= f.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>
    <% end %>
    <div  class='portfolio-new-button'>
      <%= link_to_add_association 'Add Technology', f, :technologies, class: 'button-portfolio'  %>  
    </div>
  </div>

  <div>
    <%= f.submit 'Save Portfolio Item', class: 'button'  %>
  </div>
</div>
<% end %>
